# A sample Guardfile
# More info at https://github.com/guard/guard#readme

guard :coffeescript, :input => 'src/scripts', :output => 'app'
guard :haml, :input => 'src/views', :output => 'app'
guard :sass, :input => 'src/styles', :output => 'app'

notification :growl_notify, :sticky => true, :priority => 0